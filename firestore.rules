rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // emergency_calls: written only by Cloud Functions (Admin SDK). No client access.
    match /emergency_calls/{callId} {
      allow read, write: if false;
    }

    // Emergency profile: only the owning user can read/write their own settings
    match /users/{userId}/settings/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Catch-all for other collections (e.g. saved reports)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
